{
  "name": "@deepsquare/turbine",
  "version": "0.1.0",
  "description": "Zero-dependencies efficient wrapper to build Tailwind-based React components easily.",
  "keywords": [
    "react",
    "tailwind",
    "reusable",
    "easy",
    "turbine"
  ],
  "homepage": "https://github.com/deepsquare-io/turbine#readme",
  "bugs": "https://github.com/deepsquare-io/turbine/issues",
  "license": "MIT",
  "author": "Mathieu Bour <mathieu@csquare.ai> (https://github.com/mathieu-bour)",
  "files": [
    "lib/**",
    "src/**",
    "CHANGELOG.md"
  ],
  "source": "src/turbine.tsx",
  "main": "lib/turbine.cjs",
  "module": "lib/turbine.mjs",
  "types": "lib/turbine.d.ts",
  "repository": "deepsquare-io/turbine",
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --check '**/*.{js,ts,tsx,yml,yaml,json,md}'",
    "lint": "eslint  --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "build": "parcel build",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@csquare/prettier-config": "^1.2.0",
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@types/react": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.0",
    "parcel": "^2.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "standard-commit": "^4.2.4",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "prettier": "@csquare/prettier-config"
}
